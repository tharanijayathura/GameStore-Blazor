@page "/"
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>GameStore - Welcome to Your Gaming Universe</PageTitle>

<div class="landing-page">
    <!-- Enhanced Animated Background -->
    <div class="animated-background">
        <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-lg-10 text-center">
                <!-- Enhanced Animated Logo -->
                <div class="logo-container">
                    <div class="animated-logo">
                        <i class="bi bi-controller"></i>
                    </div>
                    <h1 class="display-3 fw-bold mb-3 animated-title">
                        Game<span class="text-primary">Store</span>
                    </h1>
                    <p class="lead mb-5 animated-subtitle">
                        Discover, Manage, and Explore Your Ultimate Gaming Collection
                    </p>
                </div>

                <!-- Enhanced Animated Features -->
                <div class="features-container">
                    <div class="row justify-content-center g-4">
                        <div class="col-md-4 feature-item">
                            <div class="feature-icon">
                                <i class="bi bi-collection-play"></i>
                            </div>
                            <h5 class="fw-bold">Game Catalog</h5>
                            <p>Organize and browse your entire gaming collection with ease</p>
                        </div>
                        <div class="col-md-4 feature-item">
                            <div class="feature-icon">
                                <i class="bi bi-tags"></i>
                            </div>
                            <h5 class="fw-bold">Smart Categories</h5>
                            <p>Sort and filter by genre, price, and release date</p>
                        </div>
                        <div class="col-md-4 feature-item">
                            <div class="feature-icon">
                                <i class="bi bi-plus-circle"></i>
                            </div>
                            <h5 class="fw-bold">Easy Management</h5>
                            <p>Add, edit, and manage games with intuitive controls</p>
                        </div>
                    </div>
                </div>

                <!-- Statistics Section -->
                <div class="stats-container">
                    <div class="row justify-content-center">
                        <div class="col-md-3 col-6 stat-item">
                            <span class="stat-number">500+</span>
                            <span class="stat-label">Games Available</span>
                        </div>
                        <div class="col-md-3 col-6 stat-item">
                            <span class="stat-number">50+</span>
                            <span class="stat-label">Genres</span>
                        </div>
                        <div class="col-md-3 col-6 stat-item">
                            <span class="stat-number">24/7</span>
                            <span class="stat-label">Access</span>
                        </div>
                        <div class="col-md-3 col-6 stat-item">
                            <span class="stat-number">100%</span>
                            <span class="stat-label">Free</span>
                        </div>
                    </div>
                </div>

                <!-- Enhanced CTA Button -->
                <div class="cta-container">
                    <button @onclick="EnterStore" class="btn btn-primary btn-lg cta-button">
                        <span class="cta-text">Explore Game Store</span>
                        <i class="bi bi-arrow-right ms-2"></i>
                    </button>
                    <p class="text-light opacity-75 mt-3">
                        Join thousands of gamers managing their collections
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private async Task EnterStore()
    {
        // Add smooth transition effect
        await Task.Delay(300);
        NavigationManager.NavigateTo("/", forceLoad: true);
    }
}