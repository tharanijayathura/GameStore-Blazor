@page "/"
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>GameStore - Welcome to Your Gaming Universe</PageTitle>

<div class="landing-page">
    <div class="animated-background"></div>

    <div class="landing-wrapper container-xl py-5">
        <section class="hero row g-5 align-items-center">
            <div class="col-lg-6 hero-copy">
                <span class="eyebrow-pill">
                    <i class="bi bi-stars me-2"></i>Winter '25 Drop
                </span>
                <h1 class="display-2 fw-bold">
                    Launch a stunning catalog for every game you love
                </h1>
                <p class="lead text-light opacity-85">
                    GameStore keeps your library organized, searchable, and ready to share. Add new releases, track genres, and
                    review pricing trends with one elegant dashboard.
                </p>
                <div class="cta-group d-flex flex-wrap gap-3">
                    <button class="btn btn-primary btn-lg cta-button" @onclick="EnterStore">
                        Explore catalog
                        <i class="bi bi-arrow-up-right ms-2"></i>
                    </button>
                    <a class="btn btn-ghost btn-lg d-flex align-items-center" href="/editgame">
                        <i class="bi bi-plus-circle me-2"></i>
                        Add a game
                    </a>
                </div>
                <div class="hero-stats d-flex flex-wrap gap-4 mt-4">
                    <div class="stat-chip">
                        <h4>02m</h4>
                        <small>Avg. setup time</small>
                    </div>
                    <div class="stat-chip">
                        <h4>98%</h4>
                        <small>Faster tracking</small>
                    </div>
                    <div class="stat-chip">
                        <h4>50+</h4>
                        <small>Genres supported</small>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="hero-panel shadow-lg">
                    <div class="panel-header d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <p class="text-uppercase text-muted fw-semibold mb-1">Live preview</p>
                            <h5 class="mb-0">Today's spotlight</h5>
                        </div>
                        <span class="badge bg-gradient text-white">Auto-sync</span>
                    </div>
                    <ul class="list-unstyled mb-0">
                        <li class="panel-row">
                            <div>
                                <p class="fw-semibold mb-1">Nebula Clash</p>
                                <small class="text-muted">Action · $59.99</small>
                            </div>
                            <span class="badge rounded-pill bg-success bg-opacity-25 text-success">New</span>
                        </li>
                        <li class="panel-row">
                            <div>
                                <p class="fw-semibold mb-1">Legends of Axiom</p>
                                <small class="text-muted">RPG · $39.00</small>
                            </div>
                            <span class="text-light opacity-75">↑ 12%</span>
                        </li>
                        <li class="panel-row">
                            <div>
                                <p class="fw-semibold mb-1">Drift City PRO</p>
                                <small class="text-muted">Racing · $29.50</small>
                            </div>
                            <span class="badge rounded-pill bg-primary bg-opacity-25 text-primary">
                                Featured
                            </span>
                        </li>
                    </ul>
                    <div class="panel-footer mt-4">
                        <div>
                            <p class="text-muted mb-1">Fresh data</p>
                            <p class="h5 mb-0 text-white">Synced seconds ago</p>
                        </div>
                        <i class="bi bi-activity text-white fs-2"></i>
                    </div>
                </div>
            </div>
        </section>

        <section class="feature-grid row g-4 mt-5">
            <div class="col-md-4">
                <div class="feature-card">
                    <span class="feature-icon bg-primary bg-opacity-10 text-primary">
                        <i class="bi bi-collection"></i>
                    </span>
                    <h5>Visual catalog</h5>
                    <p>Beautiful tables and cards keep even massive libraries approachable.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <span class="feature-icon bg-success bg-opacity-10 text-success">
                        <i class="bi bi-funnel"></i>
                    </span>
                    <h5>Power filters</h5>
                    <p>Search by genre, release window, or custom tags in milliseconds.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <span class="feature-icon bg-warning bg-opacity-10 text-warning">
                        <i class="bi bi-cloud-upload"></i>
                    </span>
                    <h5>One-click updates</h5>
                    <p>Streamlined forms make adding or editing games effortless.</p>
                </div>
            </div>
        </section>

        <section class="collections mt-5">
            <div class="section-header d-flex flex-wrap align-items-center justify-content-between mb-4">
                <div>
                    <p class="text-uppercase text-muted fw-semibold mb-1">Curated blocks</p>
                    <h3 class="mb-0 text-white">Build playlists for every mood</h3>
                </div>
                <a class="text-decoration-none text-primary fw-semibold" href="/catalog">
                    See live catalog
                    <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="collection-card neon">
                        <div class="card-meta">
                            <span class="badge bg-dark text-uppercase">Arcade</span>
                            <p class="display-6 mb-0">Turbo Nights</p>
                        </div>
                        <p class="text-light opacity-75 mb-0">Fast-paced highlights updated hourly.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="collection-card dusk">
                        <div class="card-meta">
                            <span class="badge bg-dark text-uppercase">Indie</span>
                            <p class="display-6 mb-0">Quiet Worlds</p>
                        </div>
                        <p class="text-light opacity-75 mb-0">Celebrate narrative-driven gems.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="collection-card aurora">
                        <div class="card-meta">
                            <span class="badge bg-dark text-uppercase">Co-op</span>
                            <p class="display-6 mb-0">Squad Goals</p>
                        </div>
                        <p class="text-light opacity-75 mb-0">Keep your party prepared for raids.</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="workflow row g-4 mt-5">
            <div class="col-lg-5">
                <span class="eyebrow-pill small">Workflow</span>
                <h3 class="text-white mt-3">Three steps to a polished library</h3>
                <p class="text-light opacity-85">
                    Whether you're cataloging vintage cartridges or modern digital drops, GameStore keeps every detail
                    synchronized, validated, and ready for sharing.
                </p>
            </div>
            <div class="col-lg-7">
                <div class="timeline">
                    <div class="timeline-row">
                        <span class="timeline-index">01</span>
                        <div>
                            <h5>Import or start fresh</h5>
                            <p class="mb-0">Pull from your existing database or create entries manually in seconds.</p>
                        </div>
                    </div>
                    <div class="timeline-row">
                        <span class="timeline-index">02</span>
                        <div>
                            <h5>Enrich with genres & pricing</h5>
                            <p class="mb-0">Use built-in validation to keep data tidy and comparable.</p>
                        </div>
                    </div>
                    <div class="timeline-row">
                        <span class="timeline-index">03</span>
                        <div>
                            <h5>Share insights instantly</h5>
                            <p class="mb-0">Switch to cards, tables, or exports tailored to your audience.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="community mt-5">
            <div class="community-card">
                <div>
                    <p class="text-uppercase text-muted fw-semibold mb-1">Players love it</p>
                    <h3 class="mb-3 text-white">“The smoothest way to track my backlog and budget.”</h3>
                    <p class="text-light opacity-75 mb-0">Trusted by indie curators, esports orgs, and weekend collectors alike.</p>
                </div>
                <button class="btn btn-outline-light btn-lg d-flex align-items-center" @onclick="EnterStore">
                    Jump in now
                    <i class="bi bi-lightning-charge ms-2"></i>
                </button>
            </div>
        </section>
    </div>
</div>

@code {
    private async Task EnterStore()
    {
        await Task.Delay(300);
        NavigationManager.NavigateTo("/catalog", forceLoad: true);
    }
}