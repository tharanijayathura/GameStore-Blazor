@page "/catalog" 
@inject GamesClient Client 

<PageTitle>Game Catalog - GameStore</PageTitle>

<div class="container-fluid py-4">
    <!-- Stats Overview -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card stats-card-1 text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">@(games?.Length ?? 0)</h4>
                            <small>Total Games</small>
                        </div>
                        <i class="bi bi-controller fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card-2 text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">@(games?.Select(g => g.Genre).Distinct().Count() ?? 0)</h4>
                            <small>Genres</small>
                        </div>
                        <i class="bi bi-tags fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card-3 text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">@(games?.Any() == true ? games.Average(g => g.Price).ToString("C") : "$0.00")</h4>
                            <small>Avg Price</small>
                        </div>
                        <i class="bi bi-currency-dollar fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card-4 text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">@(games?.Length > 0 ? games.Min(g => g.ReleaseDate).Year.ToString() : "N/A")</h4>
                            <small>Oldest Game</small>
                        </div>
                        <i class="bi bi-calendar fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (games is null)
    {
        <!-- Enhanced Loading State -->
        <div class="card shadow-lg">
            <div class="card-body text-center py-5">
                <div class="spinner-border text-primary mb-3" style="width: 3rem; height: 3rem;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <h5 class="text-muted">Loading your game collection...</h5>
                <p class="text-muted">Please wait while we fetch your games</p>
            </div>
        </div>
    }
    else if (!games.Any())
    {
        <!-- Enhanced Empty State -->
        <div class="card shadow-lg border-0">
            <div class="card-body text-center py-5 empty-state">
                <div class="game-icon bg-primary bg-opacity-10 rounded-circle p-4 mx-auto mb-4">
                    <i class="bi bi-controller display-4 text-primary"></i>
                </div>
                <h3 class="text-dark mb-3">No Games Found</h3>
                <p class="text-muted mb-4">Start building your gaming collection by adding your first game</p>
                <a class="btn btn-primary btn-lg px-4" href="/editgame">
                    <i class="bi bi-plus-circle me-2"></i>Add Your First Game
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Enhanced Games Table -->
        <div class="card shadow-lg border-0 slide-in-left">
            <div class="card-header bg-transparent py-3">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="card-title mb-0 fw-bold text-dark">
                            <i class="bi bi-list-ul me-2 text-primary"></i>
                            Your Game Collection
                        </h5>
                    </div>
                    <div class="col-auto">
                        <div class="input-group input-group-sm" style="max-width: 300px;">
                            <span class="input-group-text bg-light border-0">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input type="text" class="form-control border-0 bg-light" 
                                   placeholder="Search games..." @oninput="OnSearchInput" />
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4 py-3">ID</th>
                                <th class="py-3">Game</th>
                                <th class="py-3">Genre</th>
                                <th class="py-3">Price</th>
                                <th class="py-3">Release Date</th>
                                <th class="text-end pe-4 py-3">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var game in filteredGames)
                            {
                                <tr class="game-row">
                                    <td class="ps-4 fw-bold text-muted">#@game.Id</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="game-icon bg-primary bg-opacity-10 rounded p-2 me-3">
                                                <i class="bi bi-controller text-primary fs-5"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold text-dark fs-6">@game.Name</div>
                                                <small class="text-muted">Added recently</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge genre-badge">@game.Genre</span>
                                    </td>
                                    <td>
                                        <span class="fw-bold text-success fs-6">@game.Price.ToString("C")</span>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="text-dark fw-medium">@game.ReleaseDate.ToString("MMM dd, yyyy")</span>
                                            <small class="text-muted">@GetYearsAgo(game.ReleaseDate)</small>
                                        </div>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-outline-primary btn-sm d-flex align-items-center" 
                                               href="@GameUrl(game.Id)"
                                               title="Edit game">
                                                <i class="bi bi-pencil me-1"></i>
                                                <span class="d-none d-sm-inline">Edit</span>
                                            </a>
                                            <button class="btn btn-outline-danger btn-sm d-flex align-items-center" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="@GetDeleteModalId(game)"
                                                    title="Delete game">
                                                <i class="bi bi-trash me-1"></i>
                                                <span class="d-none d-sm-inline">Delete</span>
                                            </button>
                                        </div>
                                        <DeleteGame Game="@game" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Enhanced Footer -->
            <div class="card-footer bg-transparent py-3">
                <div class="row align-items-center">
                    <div class="col">
                        <small class="text-muted">
                            Showing @filteredGames.Length of @games.Length games
                        </small>
                    </div>
                    <div class="col-auto">
                        <small class="text-muted">
                            Last updated: @DateTime.Now.ToString("MMM dd, yyyy HH:mm")
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private GameSummary[]? games;
    private GameSummary[] filteredGames = Array.Empty<GameSummary>();
    private string searchTerm = string.Empty;

    protected override void OnInitialized()
    {
        games = Client.GetGames();
        filteredGames = games ?? Array.Empty<GameSummary>();
    }

    private static string GameUrl(int id) => $"/editgame/{id}";

    private string GetDeleteModalId(GameSummary game)
    {
        return $"#{DeleteGame.GetModelId(game)}";
    }

    private string GetYearsAgo(DateOnly releaseDate)
    {
        var years = DateTime.Now.Year - releaseDate.Year;
        return years == 1 ? "1 year ago" : $"{years} years ago";
    }

    private void OnSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        
        if (games is not null)
        {
            if (string.IsNullOrWhiteSpace(searchTerm))
            {
                filteredGames = games;
            }
            else
            {
                filteredGames = games.Where(g => 
                    g.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    g.Genre.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                ).ToArray();
            }
        }
        
        StateHasChanged();
    }
}

<style>
    /* Stats Card Colors */
    .stats-card-1 {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }

    .stats-card-2 {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border: none;
    }

    .stats-card-3 {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border: none;
    }

    .stats-card-4 {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        border: none;
    }

    /* Genre Badge Color */
    .genre-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        font-weight: 500;
        padding: 0.5rem 1rem;
    }

    /* Optional: Add hover effects for stats cards */
    .stats-card-1:hover, .stats-card-2:hover, 
    .stats-card-3:hover, .stats-card-4:hover {
        transform: translateY(-2px);
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }
</style>