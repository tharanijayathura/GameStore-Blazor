@page "/home"
@* CHANGED FROM "/" to "/home" *@
@inject GamesClient Client

<PageTitle>Game Catalog - GameStore</PageTitle>

<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="display-6 fw-bold text-primary">Game Catalog</h1>
        <a class="btn btn-primary btn-lg d-flex align-items-center" role="button" href="/editgame">
            <i class="bi bi-plus-circle me-2"></i>Add New Game
        </a>
    </div>
    <p class="text-muted">Manage your game collection</p>
</div>

@if (games is null)
{
    <div class="d-flex justify-content-center align-items-center" style="height: 300px;">
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading games...</p>
        </div>
    </div>
}
else if (!games.Any())
{
    <div class="empty-state text-center py-5">
        <i class="bi bi-controller display-1 text-muted"></i>
        <h3 class="mt-3">No games found</h3>
        <p class="text-muted">Get started by adding your first game to the catalog.</p>
        <a class="btn btn-primary mt-2" href="/editgame">Add Your First Game</a>
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light"> 
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Game</th>
                            <th>Genre</th>
                            <th>Price</th>
                            <th>Release Date</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var game in games)
                        {
                            <tr class="game-row">
                                <td class="ps-4 fw-semibold text-muted">#@game.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="game-icon bg-primary bg-opacity-10 rounded p-2 me-3">
                                            <i class="bi bi-controller text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@game.Name</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary bg-opacity-25 text-dark">@game.Genre</span>
                                </td>
                                <td class="fw-bold text-success">@game.Price.ToString("C")</td>
                                <td>
                                    <span class="text-muted">@game.ReleaseDate.ToString("MMM dd, yyyy")</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-outline-primary btn-sm" 
                                           href="@GameUrl(game.Id)"
                                           title="Edit game">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button class="btn btn-outline-danger btn-sm" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="@GetDeleteModalId(game)"
                                                title="Delete game">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                    <DeleteGame Game="@game" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@code {
    private GameSummary[]? games;
   
    protected override void OnInitialized()
    {
        games = Client.GetGames();
    }

    private static string GameUrl(int id) => $"/editgame/{id}";

    private string GetDeleteModalId(GameSummary game)
    {
        return $"#{DeleteGame.GetModelId(game)}";
    }
}