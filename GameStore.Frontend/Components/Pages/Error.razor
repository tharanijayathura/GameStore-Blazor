@page "/Error"
@using System.Diagnostics
@inject NavigationManager NavigationManager

<PageTitle>Error - GameStore</PageTitle>

<div class="error-page">
    <div class="error-container">
        <div class="error-content glass-panel">
            <div class="error-icon-wrapper">
                <div class="error-icon">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                </div>
            </div>
            
            <h1 class="error-title">Oops! Something went wrong</h1>
            <p class="error-message">
                An unexpected error occurred while processing your request. 
                Don't worry, our team has been notified and we're working on it.
            </p>

            @if (ShowRequestId)
            {
                <div class="request-id-section">
                    <div class="request-id-label">
                        <i class="bi bi-info-circle me-2"></i>
                        Request ID
                    </div>
                    <code class="request-id-value">@RequestId</code>
                </div>
            }

            <div class="error-actions">
                <a href="/" class="btn btn-primary btn-lg">
                    <i class="bi bi-house-door me-2"></i>
                    Go Home
                </a>
                <a href="/catalog" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-grid-3x3-gap me-2"></i>
                    View Catalog
                </a>
                <button class="btn btn-link text-white-50" @onclick="GoBack">
                    <i class="bi bi-arrow-left me-2"></i>
                    Go Back
                </button>
            </div>

            @if (IsDevelopment)
            {
                <div class="dev-info mt-4">
                    <div class="dev-header">
                        <i class="bi bi-code-slash me-2"></i>
                        <h5 class="mb-0">Development Mode</h5>
                    </div>
                    <p class="dev-text">
                        Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
                    </p>
                    <p class="dev-warning">
                        <i class="bi bi-shield-exclamation me-2"></i>
                        <strong>Warning:</strong> The Development environment shouldn't be enabled for deployed applications.
                        It can result in displaying sensitive information from exceptions to end users.
                    </p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .error-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background: var(--dark-gradient);
    }

    .error-container {
        max-width: 600px;
        width: 100%;
    }

    .error-content {
        text-align: center;
        padding: 3rem 2rem;
    }

    .error-icon-wrapper {
        margin-bottom: 2rem;
    }

    .error-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto;
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(220, 38, 38, 0.15));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid rgba(239, 68, 68, 0.3);
        animation: pulse 2s ease-in-out infinite;
    }

    .error-icon i {
        font-size: 4rem;
        color: #ef4444;
    }

    .error-title {
        color: var(--text-primary);
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #f8fafc, #cbd5e1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .error-message {
        color: rgba(248, 250, 252, 0.7);
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .request-id-section {
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: var(--border-radius);
        padding: 1rem 1.5rem;
        margin-bottom: 2rem;
    }

    .request-id-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: rgba(248, 250, 252, 0.6);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .request-id-value {
        display: block;
        color: #8b5cf6;
        font-size: 0.9rem;
        font-weight: 600;
        background: rgba(139, 92, 246, 0.1);
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-family: 'Courier New', monospace;
    }

    .error-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .dev-info {
        background: rgba(251, 191, 36, 0.1);
        border: 1px solid rgba(251, 191, 36, 0.3);
        border-radius: var(--border-radius);
        padding: 1.5rem;
        text-align: left;
        border-left: 4px solid #fbbf24;
    }

    .dev-header {
        display: flex;
        align-items: center;
        color: #fbbf24;
        margin-bottom: 1rem;
    }

    .dev-text {
        color: rgba(248, 250, 252, 0.8);
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    .dev-warning {
        color: rgba(248, 250, 252, 0.7);
        font-size: 0.9rem;
        margin: 0;
        display: flex;
        align-items: flex-start;
        gap: 0.5rem;
    }

    .dev-warning i {
        color: #fbbf24;
        margin-top: 0.25rem;
    }

    @@media (max-width: 576px) {
        .error-content {
            padding: 2rem 1.5rem;
        }

        .error-icon {
            width: 100px;
            height: 100px;
        }

        .error-icon i {
            font-size: 3rem;
        }

        .error-title {
            font-size: 1.5rem;
        }

        .error-actions {
            flex-direction: column;
        }

        .error-actions .btn {
            width: 100%;
        }
    }
</style>

@code{
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);
    private bool IsDevelopment => false; // Set to true in development mode

    protected override void OnInitialized() =>
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;

    private void GoBack()
    {
        NavigationManager.NavigateTo("/");
    }
}
