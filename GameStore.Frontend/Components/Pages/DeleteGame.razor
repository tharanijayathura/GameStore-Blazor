@inject GamesClient Client
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="modal fade" id="@GetModelId(Game)" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <div class="modal-icon bg-danger bg-opacity-10 rounded-circle p-3 me-3">
                    <i class="bi bi-exclamation-triangle-fill text-danger fs-4"></i>
                </div>
                <div>
                    <h5 class="modal-title fw-bold" id="deleteModalLabel">Confirm Deletion</h5>
                    <p class="text-muted mb-0">This action cannot be undone</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <div class="modal-body py-4">
                <p>Are you sure you want to delete <strong class="text-danger">@Game?.Name</strong>?</p>
                <div class="alert alert-warning mt-3">
                    <i class="bi bi-info-circle me-2"></i>
                    This will permanently remove the game from your catalog.
                </div>
            </div>

            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </button>
                <button type="button" 
                        class="btn btn-danger" 
                        data-bs-dismiss="modal" 
                        @onclick="@Confirm">
                    <i class="bi bi-trash me-2"></i>Delete Game
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public GameSummary? Game { get; set; }

    public static string GetModelId(GameSummary? game)
    {
        ArgumentNullException.ThrowIfNull(game);
        return $"deleteGame{game.Id}"; 
    }

    private void Confirm()
    {
        Client.DeleteGame(Game!.Id);
        NavigationManager.Refresh();
    }
}