@inject GamesClient Client
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="modal fade" id="@GetModelId(Game)" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content delete-modal-content border-0 shadow-lg">
            <div class="modal-header delete-modal-header border-0">
                <div class="modal-icon-wrapper">
                    <div class="modal-icon bg-danger bg-opacity-10 rounded-circle">
                        <i class="bi bi-exclamation-triangle-fill text-danger"></i>
                    </div>
                </div>
                <div class="modal-title-section">
                    <h5 class="modal-title fw-bold" id="deleteModalLabel">Confirm Deletion</h5>
                    <p class="modal-subtitle">This action cannot be undone</p>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <div class="modal-body delete-modal-body">
                <div class="warning-alert">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-info-circle-fill text-warning me-3"></i>
                        <div>
                            <h6 class="alert-heading fw-semibold mb-1">Warning: Permanent Action</h6>
                            <p class="mb-0">You are about to permanently delete this game from your catalog. All associated data will be lost.</p>
                        </div>
                    </div>
                </div>
                
                <div class="game-details-card mt-4">
                    <div class="card-header-section">
                        <i class="bi bi-controller me-2"></i>
                        <h6 class="fw-semibold mb-0">Game Details</h6>
                    </div>
                    <div class="game-details-grid">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-tag me-1"></i>Name
                            </div>
                            <div class="detail-value text-danger fw-bold">@Game?.Name</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-collection me-1"></i>Genre
                            </div>
                            <div class="detail-value">
                                <span class="badge genre-chip">@Game?.Genre</span>
                            </div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-currency-dollar me-1"></i>Price
                            </div>
                            <div class="detail-value text-success fw-bold">@Game?.Price.ToString("C")</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-calendar3 me-1"></i>Release Date
                            </div>
                            <div class="detail-value">@Game?.ReleaseDate.ToString("MMM dd, yyyy")</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer delete-modal-footer border-0">
                <button type="button" class="btn btn-cancel px-4 d-flex align-items-center" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </button>
                <button type="button" 
                        class="btn btn-delete-confirm px-4 d-flex align-items-center" 
                        data-bs-dismiss="modal" 
                        @onclick="Confirm">
                    <i class="bi bi-trash me-2"></i>Delete Game
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .delete-modal-content {
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: var(--border-radius-lg);
        overflow: hidden;
    }

    .delete-modal-header {
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(220, 38, 38, 0.15));
        padding: 2rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .modal-icon-wrapper {
        flex-shrink: 0;
    }

    .modal-icon {
        width: 64px;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        border: 2px solid rgba(239, 68, 68, 0.3);
        animation: pulse 2s ease-in-out infinite;
    }

    .modal-title-section {
        flex: 1;
    }

    .modal-title {
        color: var(--text-primary);
        font-size: 1.5rem;
        margin-bottom: 0.25rem;
    }

    .modal-subtitle {
        color: rgba(248, 250, 252, 0.6);
        margin: 0;
        font-size: 0.9rem;
    }

    .delete-modal-body {
        padding: 2rem;
        color: var(--text-primary);
    }

    .warning-alert {
        background: rgba(251, 191, 36, 0.1);
        border: 1px solid rgba(251, 191, 36, 0.3);
        border-radius: var(--border-radius);
        padding: 1.25rem;
        border-left: 4px solid #fbbf24;
    }

    .warning-alert i {
        font-size: 1.5rem;
        margin-top: 0.25rem;
    }

    .alert-heading {
        color: #fbbf24;
        margin-bottom: 0.5rem;
    }

    .game-details-card {
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: var(--border-radius);
        padding: 1.5rem;
    }

    .card-header-section {
        display: flex;
        align-items: center;
        margin-bottom: 1.25rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--text-primary);
    }

    .card-header-section i {
        color: #8b5cf6;
        font-size: 1.1rem;
    }

    .game-details-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.25rem;
    }

    .detail-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .detail-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: rgba(248, 250, 252, 0.6);
        font-weight: 600;
        display: flex;
        align-items: center;
    }

    .detail-label i {
        color: #8b5cf6;
        font-size: 0.9rem;
    }

    .detail-value {
        color: var(--text-primary);
        font-size: 1rem;
    }

    .delete-modal-footer {
        padding: 1.5rem 2rem;
        background: rgba(15, 23, 42, 0.4);
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
    }

    .btn-cancel {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: var(--text-primary);
        transition: all 0.3s ease;
    }

    .btn-cancel:hover {
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
    }

    .btn-delete-confirm {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        border: none;
        color: white;
        box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
        transition: all 0.3s ease;
    }

    .btn-delete-confirm:hover {
        background: linear-gradient(135deg, #dc2626, #b91c1c);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(239, 68, 68, 0.4);
    }

    @@media (max-width: 576px) {
        .game-details-grid {
            grid-template-columns: 1fr;
        }

        .delete-modal-header {
            flex-direction: column;
            text-align: center;
        }

        .modal-icon-wrapper {
            margin-bottom: 1rem;
        }
    }
</style>

@code {
    [Parameter]
    public GameSummary? Game { get; set; }

    public static string GetModelId(GameSummary? game)
    {
        ArgumentNullException.ThrowIfNull(game);
        return $"deleteGame{game.Id}"; 
    }

    private void Confirm()
    {
        if (Game is not null)
        {
            Client.DeleteGame(Game.Id);
            NavigationManager.Refresh();
        }
    }
}